{
  "display_information": {
    "name": "Ralph",
    "description": "Autonomous AI agent for code development",
    "background_color": "#4A154B"
  },
  "features": {
    "app_home": {
      "home_tab_enabled": false,
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "Ralph",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/ralph",
        "description": "Create a new task for Ralph",
        "usage_hint": "add dark mode to the design system",
        "should_escape": false
      },
      {
        "command": "/repos",
        "description": "Manage repositories",
        "usage_hint": "list | add | edit <slug> | remove <slug>",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "app_mentions:read",
        "channels:history",
        "channels:read",
        "chat:write",
        "commands",
        "groups:history",
        "groups:read",
        "im:history",
        "im:read",
        "im:write",
        "mpim:history",
        "mpim:read",
        "users:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "app_mention",
        "message.channels",
        "message.groups",
        "message.im",
        "message.mpim"
      ]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
